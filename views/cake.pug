extends layout

block content
  h1= title
  - var results = results
    div(class = 'container-fluid')
        div(class = 'row')
            each i, index in results 
                div(class="col-sm-2",onClick=`buy(${index})`) Flavor : #{i["flavour"]} <br> Price : #{i["price"]} <br> Shape: #{i["shape"]}
                script.
                    function buy(val) {
                        alert(`You purchased item ${val}`)
                    }
   